    <script>
      import { aosInit } from "@js/aos";

      // runs on initial page load
      aosInit();
    </script>
    <script>
      document
        .getElementById("waitlist-form")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // to prevent default form submission
          var form = event.target;
          var formData = new FormData(form);

          fetch(
            "https://script.google.com/macros/s/AKfycbxgowDv4E0Kqqkex4FjL78XK6DIpRE_6emhaOcs1zQJ_MGDC0mXIKmW_BwA4tH-oswK/exec",
            {
              method: "POST",
              body: formData,
            }
          )
            .then((response) => response.json())
            .then((data) => {
              form.reset(); // to reset form data
              setTimeout(function () {
                document
                  .querySelector(".waitlist-messages")
                  .classList.add("active");
              }, 500);
            })
            .catch((error) => {
              console.error("Error:", error);
